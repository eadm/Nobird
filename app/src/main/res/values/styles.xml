<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="ComposeEditTextStyle">
        <item name="android:textColor">@color/mediumGray</item>
        <item name="colorControlNormal">#eee</item>
        <item name="colorAccent">#ddd</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="SearchEditTextStyle">
        <item name="android:background">@null</item>
        <item name="colorControlNormal">#eee</item>
        <item name="android:textColor">@color/mediumGray</item>
        <item name="colorAccent">#aaa</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SearchActionBarTheme" parent="Theme.AppCompat.Light" >
        <item name="android:background">@color/lightGray</item>
    </style>

    <style name="SearchActionsTheme">
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/hover_background_gray</item>
    </style>

    <declare-styleable name="RoundImageView">
        <attr name="corner_radius" format="dimension" />
    </declare-styleable>

    <style name="FragmentHomeTabStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorWhite</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">16dp</item>
        <item name="tabPaddingEnd">16dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/FragmentHomeTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorWhite</item>
    </style>
    <style name="FragmentHomeTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/veryLightGray</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>
